# VARIOSYNC Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# Supabase Configuration
# =============================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# =============================================================================
# TimescaleDB Configuration (Optional)
# =============================================================================
# Option 1: Use Supabase PostgreSQL with TimescaleDB extension enabled
# TIMESCALEDB_URL=postgresql://postgres:password@db.xxx.supabase.co:5432/postgres
# Option 2: Use Render PostgreSQL with TimescaleDB extension
# TIMESCALEDB_URL=postgresql://user:password@host.onrender.com:5432/dbname
# Option 3: Use external TimescaleDB instance
# TIMESCALEDB_URL=postgresql://user:password@host:5432/dbname
# Enable TimescaleDB features (requires extension to be enabled)
ENABLE_TIMESCALEDB=false

# =============================================================================
# Storage Configuration (Wasabi/S3)
# =============================================================================
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_ENDPOINT_URL=https://s3.us-east-1.wasabisys.com
AWS_BUCKET_NAME=your-bucket-name

# =============================================================================
# Redis Configuration
# =============================================================================
# Local development:
REDIS_URL=redis://localhost:6379/0
# Production (Upstash):
# REDIS_URL=rediss://default:password@host.upstash.io:6379
# Production (Render Redis):
# REDIS_URL=redis://host:port/0

# =============================================================================
# Modal Configuration (Optional)
# =============================================================================
MODAL_TOKEN_ID=your-modal-token-id
MODAL_TOKEN_SECRET=your-modal-token-secret

# =============================================================================
# NiceGUI Configuration
# =============================================================================
NICEGUI_HOST=0.0.0.0
NICEGUI_PORT=8000
NICEGUI_RELOAD=false

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_REDIS_CACHE=true
ENABLE_MODAL_FUNCTIONS=false
ENABLE_RATE_LIMITING=true
REQUIRE_SUPABASE=false
ENFORCE_PAYMENT=false

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=variosync.log
